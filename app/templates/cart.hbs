
<div class="cart">
  <section class="products-cart">
    {{#each this.cart.productsList as |selectedProduct|}}
    <article class="product-cart">
      <img class="img-detail" src={{selectedProduct.image}} alt={{selectedProduct.image}}/>
      <p>{{selectedProduct.name}}</p>
      <input class="input-product" type="number" min="0" value={{selectedProduct.count}} {{on 'input' (fn this.addProductCount selectedProduct)}}>
      <p {{on 'click' (fn this.removeProduct selectedProduct)}}>X</p>
    </article>
    {{/each}}
  </section>

  <section>
    <article class="purchase-cart">
      <p>Total items {{this.itemsAmount}}</p>
      <p>Total {{this.total}}</p>
    </article>
  </section>
  </div>

